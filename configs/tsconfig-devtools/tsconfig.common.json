{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ES2023"],
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2023"
  }
}
